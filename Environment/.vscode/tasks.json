{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",		// Use color in the terminal
				"-Wall",							// Produce warning messages for everything
				"-std=c++23",						// Use C++23

				"-D DEBUG",							// Define Debug Macro

				"-Wl,-rpath=${workspaceFolder}/bin/", 	// Sets the runtime linker to look for shared libs here
														// WILL need to be changed for release

				"-fsanitize=address,undefined,null",		// Say whats happening during segfaults
			
				"-g",								// Compiles and links with debugging information from GDB
				"${workspaceFolder}/src/*.cpp",		// Use all .cpp files in the src directory
				"${workspaceFolder}/src/imgui/*.cpp",		// Use all .cpp files in the src directory

				"-I${workspaceFolder}/include",		// Search for header files in the include directory
				"-L${workspaceFolder}/lib",			// Search for compiled archives in the lib directory

				"-lGL", 							// Link to openGL
				"-lLAS-SDK",						// Link to LAS-SDK for compilation (inside the lib folder)
				"-lglfw3",							// Link to glfw3
				
				"-o",														// Output the files
				"${workspaceFolder}/bin/LAS.exe",	// Name the output file the Workspace Folder. Put the output file in the builds directory
			],
			"options": {
				"cwd": "${workspaceFolder}"			// Change directory to builds folder
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}
